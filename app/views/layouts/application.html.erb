<!DOCTYPE html>
<html>
<head>
  <title>Brave</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Belgrano' rel='stylesheet' type='text/css'>
</head>
<body>
<div class="container">
  <div class="headNav">
  <%= flash[:notice] %>
  <%= flash[:alert] %>
	<% if @user %>
  <%= link_to "Dashboard", user_path(@user.id) %>
  <%= link_to "New Project", new_project_url %>
	<% end %>
  <% if session[:uid] == nil %>
    <%= link_to "Sign Up", new_user_url %>
    <%= link_to "Log In", new_session_url %>
  <% else %>
    <%= link_to "Sign Out", signout_url %>
  <% end %>
  </div>

<%= yield %>
  </div>
</body>
</html>
