<!DOCTYPE html>
<html>
<head>
  <title>Brave</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= flash[:notice] %>
<%= flash[:alert] %>
<%= link_to "Dashboard", projects_url %>
<%= link_to "New Project", new_project_url %>
<% if session[:uid] == nil %>
  <%= link_to "Sign Up", new_user_url %>
  <%= link_to "Log In", new_session_url %>
<% else %>
  <%= link_to "Sign Out", signout_url %>
<% end %>

<%= yield %>

</body>
</html>
