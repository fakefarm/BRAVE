<!DOCTYPE html>
<html>
<head>
  <title>Brave</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Belgrano' rel='stylesheet' type='text/css'>
</head>
<body>
<div class="container">
  <div class="headNav">
  <%= flash[:notice] %>
  <%= flash[:alert] %>  
  <br>

			<% if flash[:notice] %>
			<%= flash[:notice]%>
			<!-- <img width="15" class="photo" alt="dummypic" src="assets/greenup.png"> -->
			<%end %>
			<%= flash[:alert] %>
			<br>
			<% if session[:uid] %>
			<%= link_to current_user.name.upcase + "'s Dashboard", user_url(current_user) %>
			<%= link_to "New Project", new_project_url %>
			<%= link_to "Sign Out", signout_url %>
			<% else %>
			<%= link_to "Sign Up", new_user_url %>
			<%= link_to "Log In", new_session_path %>
			<% end %>
		
			</div>
			<%= yield %>
		</div>
	</body>
