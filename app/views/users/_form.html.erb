<%= form_for @user do |f| %>

<% if @user.errors.any? %>
<div class="error_messages">
  <h2>Form is invalid</h2>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>


<br/>
<%= f.label :name %>
<%= f.text_field :name %>
<br/>
<%= f.label :email %>
<%= f.text_field :email %>
<br/>
<%= f.label :password %>
<%= f.password_field :password %>
<br/>
<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %>
<br/>
<%= f.label :role %>
<%= collection_select :role_id, :classification, Role.all, :description, :description %>
<%= f.submit  %>
<% end %>

