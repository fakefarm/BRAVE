<h1>Project Management Dashboard</h1>

<ul>

<% @projects.each do |project| %>
<li><%= link_to project.title, project_url(project.id) %></li>

  <% if project.is_active == true %>
    <ul>
      <% project.agreements.each do |agreement| %>
      <li>
      <p>Agreement Title: <%= agreement.title %> </p>
      </li>
      <%end %>
    </ul>
  <%end %>
<% end %>

</ul>


